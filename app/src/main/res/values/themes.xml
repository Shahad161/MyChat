<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
    </style>
    <style name="time">
        <item name="android:layout_marginTop">@dimen/smallSpace</item>
        <item name="android:layout_marginBottom">@dimen/smallSpace</item>
        <item name="android:layout_marginEnd">@dimen/timeSpace</item>
        <item name="android:layout_gravity">right</item>
    </style>
    <style name="blueTextSpace">
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:gravity">right</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="ImageView">
        <item name="android:layout_marginTop">-30dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>